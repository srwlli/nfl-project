    },
    {
      "name": "Home Team History",
      "order": 4,
      "component": "HomeTeamHistory"
    },
    {
      "name": "Weather Impact",
      "order": 5,
      "component": "WeatherImpactAnalysis"
    },
    {
      "name": "Notable Games",
      "order": 6,
      "component": "NotableGamesAtStadium"
    },
    {
      "name": "Recent Games",
      "order": 7,
      "component": "RecentGamesAtStadium"
    },
    {
      "name": "Location Map",
      "order": 8,
      "component": "StadiumLocationMap"
    },
    {
      "name": "Stadium Records",
      "order": 9,
      "component": "StadiumRecords"
    },
    {
      "name": "Photo Gallery",
      "order": 10,
      "component": "StadiumPhotoGallery",
      "condition": "If photos available"
    },
    {
      "name": "Amenities",
      "order": 11,
      "component": "StadiumAmenities",
      "condition": "If amenity data available"
    }
  ],
  "technicalNotes": {
    "stateManagement": "SWR for data fetching",
    "caching": "24 hours (stadium info rarely changes)",
    "images": "Next/Image with optimization",
    "maps": "Lazy load Google Maps component",
    "accessibility": "WCAG 2.1 AA compliant"
  }
}
